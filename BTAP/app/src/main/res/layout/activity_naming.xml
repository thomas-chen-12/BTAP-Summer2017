<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.gatechvip.btap.summer17clean.NamingActivity">

    <ImageButton
        android:id="@+id/btnNextNaming"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/btn_next" />

    <ImageView
        android:id="@+id/ivNamingPicture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="180dp"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />

    <ListView
        android:id="@+id/lvTest"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/btnNextNaming"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/btnHint"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/btnNextNaming"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:background="@drawable/btn_hint_text" />
</RelativeLayout>
